{
  "name": "@snoka/monorepo",
  "version": "0.0.0",
  "private": "true",
  "description": "A fast and fun test runner for Vite & Node Powered by Vite.",
  "author": "Elone Hoo <hi@elonehoo.me>",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm -C packages/client run dev",
    "dev:server": "pnpm -C demo run dev:server",
    "dev:run": "pnpm -C demo run dev:run",
    "build": "pnpm run --filter \"./packages/**\" -r build",
    "watch": "pnpm run build && pnpm run --parallel --filter \"./packages/**\" -r watch",
    "test": "pnpm run --parallel --filter \"./packages/**\" -r test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.34.1",
    "@types/node": "^18.11.18",
    "chalk": "^4.1.2",
    "eslint": "^8.31.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "rimraf": "^4.1.2",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  }
}
